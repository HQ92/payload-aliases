{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@root/*": ["./*"],
      "@api/*": ["./api/*"],
      "@components/*": ["./components/*"],
      "@config/*": ["./config/*"],
      "@content/*": ["./content/*"],
      "@hooks/*": ["./hooks/*"],
      "@images/*": ["./public/assets/images/*"],
      "@pages/*": ["./pages/*"],
      "@services/*": ["./services/*"],
      "@store/*": ["./store/*"],
      "@styles/*": ["./styles/*"],
      "@utils/*": ["./utils/*"]
    },
    "incremental": true,
    "outDir": "./dist",
    "rootDir": "./",
    "noEmit": false
  },
  "ts-node": {
    "transpileOnly": true
  }
}
